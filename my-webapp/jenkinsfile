pipeline {
    agent any

    tools {
        maven 'Maven-3.9.6' // Name from Jenkins Global Tool Configuration
        jdk 'Java-21'       // Name from Jenkins Global Tool Configuration
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'git@github.com:Satishganiyada/maven-tomcat-web-applicaton.git'
            }
        }

        stage('Build with Maven') {
            steps {
                dir('my-webapp') {  // Go into the folder containing pom.xml
            sh 'mvn clean install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package Application') {
            steps {
                sh 'mvn package'
            }
        }

        stage('Deploy') {
            steps {
                // Example: Copy JAR/WAR to deployment server
                sh '''
                    scp -o StrictHostKeyChecking=no target/*.jar ubuntu@51.20.32.84:/opt/apps/
                    ssh ubuntu@51.20.32.84 'sudo systemctl restart myapp.service'
                '''
            }
        }
    }

    post {
        success {
            echo '✅ Build and deployment successful!'
        }
        failure {
            echo '❌ Build or deployment failed.'
        }
    }
}
