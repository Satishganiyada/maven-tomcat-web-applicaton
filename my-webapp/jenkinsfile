pipeline {
    agent any

    tools {
        maven 'Maven-3.9.6'
        jdk 'Java-21'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'git@github.com:Satishganiyada/maven-tomcat-web-applicaton.git'
            }
        }

        stage('Build with Maven') {
            steps {
                dir('my-webapp') {
                    sh 'mvn clean install'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('my-webapp') {
                    sh 'mvn test'
                }
            }
        }

        stage('Package Application') {
            steps {
                dir('my-webapp') {
                    sh 'mvn package'
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('my-webapp') {
                    sh '''
                        scp -o StrictHostKeyChecking=no target/*.war ubuntu@51.20.32.84:/opt/apps/
                        ssh ubuntu@56.228.31.205 'sudo systemctl restart myapp.service'
                    '''
                }
            }
        }
    }

    post {
        success {
            echo '✅ Build and deployment successful!'
        }
        failure {
            echo '❌ Build or deployment failed.'
        }
    }
}
